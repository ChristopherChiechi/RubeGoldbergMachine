<?xml version="1.0"?>

<!-- Game settings -->

<settings>
  <game name="Rube Goldberg Machine" />
  <renderer width="1024" height="768" />
  
   <font file="Media\Fonts\AverageSans_32.spritefont"/>

  <!-- sprites -->

  <sprites path="Media\Images">
    <sprite name="background" file="background.png"/>
    <sprite name="ball" file="ball.png"/>
    <sprite name="pig" file="pig.png"/>
    <sprite name="clockface" file="clockface.png"/>
    <sprite name="line" file="line.png"/>
	<sprite name="ramp" file="ramp.png"/>
	<sprite name="bumper" file="bumper.png"/>
	<sprite name="basket" file="basket.png"/>
	<sprite name="platform" file="platform.png"/>
	<sprite name="pin" file="pin.png"/>
	<sprite name="heavyball" file="heavyball.png"/>
	<sprite name="smallplatform" file="smallplatform.png"/>
	
    <sprite name="pulleywheel" file="pulleywheel.png"/>
	<sprite name="pulleyline" file="pulleyline.png"/>
	<sprite name="circlebumper" file="circlebumper.png"/>
	
    <sprite name="cannonbase" file="base.png"/>
    <sprite name="wheel" file="wheel.png"/>
	<sprite name="catapult" file="catapult.png"/>
	
	<sprite name="block" file="block.png"/>
	<sprite name="stick" file="stick.png"/>
	<sprite name="bird" file="bird.png"/>
	<sprite name="propeller" file="propeller.png"/>
  </sprites>

  <!-- sound -->

  <sounds path="Media\Sounds">
    <sound name="yay" file="yay.wav" instances="1"/>
    <sound name="bonk" file="bonk.wav" instances="4"/>
    <sound name="buzz" file="buzz.wav" instances="1"/>
    <sound name="restart" file="restart.wav" instances="1"/>
    <sound name="whoosh" file="whoosh.wav" instances="1"/>
  </sounds>
</settings>
